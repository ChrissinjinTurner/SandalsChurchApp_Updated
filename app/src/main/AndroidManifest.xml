<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.christophersinjinturner.sandalschurchapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_sandals"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_sandals_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SermonDetailActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".SeriesListActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>